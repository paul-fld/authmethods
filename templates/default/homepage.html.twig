{% extends 'base.html.twig' %}

{% block title %}Accueil | Symfony Demo{% endblock %}

{% block body_id 'homepage' %}

{% block header %}{% endblock %}
{% block footer %}{% endblock %}

{% block body %}
<div class="container d-flex flex-column justify-content-center align-items-center min-vh-100">
    <div class="card shadow-lg rounded-4 p-5 w-100" style="max-width: 600px;">
        <h1 class="text-center mb-4">Bienvenue sur l'application</h1>

        {% if app.user %}
            <div class="text-center mb-4">
                <p>Connecté en tant que <strong>{{ app.user.fullname|default(app.user.username) }}</strong></p>
                <a href="{{ logout_path() }}" class="btn btn-outline-danger w-100">
                    <i class="bi bi-box-arrow-right me-2"></i> Se déconnecter
                </a>
            </div>
        {% else %}
            <div class="text-center mb-4">
                <p>Connectez-vous avec votre compte Google :</p>
                <a href="{{ path('hwi_oauth_login') }}" class="btn btn-light border w-100 d-flex align-items-center justify-content-center gap-2">
                    <img src="https://developers.google.com/identity/images/g-logo.png" alt="Google Logo" width="20" height="20">
                    Se connecter avec Google
                </a>
            </div>
        {% endif %}

        <hr class="my-4">

        <div class="d-flex justify-content-between gap-2">
            <a href="{{ path('blog_index', {'_locale': app.request.locale}) }}" class="btn btn-outline-primary w-100">
                <i class="bi bi-journal-text me-1"></i> Accès Blog
            </a>
            <a href="{{ path('admin_index', {'_locale': app.request.locale}) }}" class="btn btn-outline-secondary w-100">
                <i class="bi bi-shield-lock me-1"></i> Accès Admin
            </a>
        </div>
    </div>
</div>
{% endblock %}

{% block main %}
    {# vide car tout le contenu est déjà dans block body #}
{% endblock %}
